<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="#FFFFFF"
    android:name=".MainActivity2"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:gravity="center"
        android:paddingTop="15dp">


        <ImageView
            android:id="@+id/antena"
            android:layout_width="230dp"
            android:layout_height="266dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="78dp"
            android:layout_marginBottom="40dp"
            app:srcCompat="@drawable/antenna" />

        <ImageView
            android:id="@+id/head"
            android:layout_width="180dp"
            android:layout_height="135dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="1dp"
            android:paddingStart="105dp"
            android:paddingTop="55dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/head"/>

        <ImageView
            android:id="@+id/body"
            android:layout_width="136dp"
            android:layout_height="288dp"
            android:layout_marginStart="173dp"
            android:layout_marginTop="7dp"
            android:paddingStart="120dp"
            android:paddingTop="53dp"
            app:srcCompat="@drawable/tor"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/brazoD"
            android:layout_width="153dp"
            android:layout_height="127dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="70dp"
            android:paddingStart="100dp"
            android:paddingTop="60dp"
            app:srcCompat="@drawable/brazoiz"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/brazoI"
            android:layout_width="170dp"
            android:layout_height="142dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="64dp"
            android:paddingStart="120dp"
            android:paddingTop="60dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/brazoder" />

        <ImageView
            android:id="@+id/piernaD"
            android:layout_width="152dp"
            android:layout_height="148dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="118dp"
            android:paddingStart="101dp"
            android:paddingTop="90dp"
            app:srcCompat="@drawable/brazoder"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/piernaI"
            android:layout_width="172dp"
            android:layout_height="148dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="118dp"
            android:paddingStart="121dp"
            android:paddingTop="90dp"
            app:srcCompat="@drawable/brazoiz"
            android:visibility="invisible"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/letra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:padding="10dp"
        android:orientation="horizontal"
        android:gravity="center">

    </LinearLayout>

    <GridView
        android:id="@+id/letras"
        android:layout_width="374dp"
        android:layout_height="188dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="#FFFFFF"
        android:horizontalSpacing="5dp"
        android:numColumns="7"
        android:stretchMode="columnWidth"
        android:verticalSpacing="1dp" />

    <Button
        android:id="@+id/buttonJugarDeNuevo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="onClickJugarDeNuevo"
        android:text="Nuevo Juego"
        android:textSize="20sp"
        app:layout_constraintVertical_bias="0.34" />

</LinearLayout>